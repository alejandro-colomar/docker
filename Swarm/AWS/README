# FIRST CREATE STACK WITH CLOUDFORMATION (IN INSTALL FOLDER)

# FROM CLOUD9 INSTANCE
export stack=$stack && git clone https://github.com/secobau/docker.git && chmod +x docker/Swarm/AWS/install/swarm.sh && ./docker/Swarm/AWS/install/swarm.sh ; rm -rf docker
export stack=$stack && git clone https://github.com/secobau/docker.git && chmod +x docker/Swarm/AWS/app/deploy.sh && ./docker/Swarm/AWS/app/deploy.sh ; rm -rf docker
export stack=$stack && git clone https://github.com/secobau/docker.git && chmod +x docker/Swarm/AWS/app/remove.sh && ./docker/Swarm/AWS/app/remove.sh ; rm -rf docker

# FROM SWARM MANAGER INSTANCE
cd && git clone https://github.com/secobau/docker.git && sudo docker stack deploy --compose-file docker/Swarm/AWS/app/php.yml php && sudo docker stack deploy --compose-file docker/Swarm/AWS/app/dockercoins.yml dockercoins
